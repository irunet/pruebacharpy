<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart1"
        android:layout_width="0dp"
        android:layout_weight="14"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_estadisticas_textView1"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:text="Test"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_estadisticas_textView2"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"

            android:text="  J  "
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fragment_estadisticas_textView3"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"

            android:text=" kJ/m² "
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/fragment_estadisticas_btnx"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_weight="3"
            android:padding="5dp"
            android:text=" kJ/m² "
            android:textSize="14sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="invisible"
            android:enabled="false"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recicler_view_resultados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp">
    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/fragment_estadisticas_textView4"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:text=" x "
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_estadisticas_media_energia"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"

            android:text="0000"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/fragment_estadisticas_media_energiam2"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"

            android:text="0000"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/fragment_estadisticas_media_x1"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"

            android:text="0000"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="invisible"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment_estadisticas_textView5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:text="std"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_estadisticas_std_energia"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"

            android:text="0000"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/fragment_estadisticas_std_energiam2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"

            android:text="0000"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/fragment_estadisticas_media_x2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"

            android:text="0000"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="invisible"/>


    </LinearLayout>


    <Button
        android:id="@+id/fragment_estadisticas_button_save"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="20dp"

        android:text="@string/fragment_estadisticas_button_save"/>
    </LinearLayout>


</LinearLayout>